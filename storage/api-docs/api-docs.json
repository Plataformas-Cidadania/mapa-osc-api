{
    "openapi": "3.0.0",
    "info": {
        "title": "Mapa OSC Data API",
        "description": "This is an API that scrape data from https://www.mapaosc.ipea.gov.br/ and serve the data in JSON format",
        "contact": {
            "name": "Mapa das OSCs",
            "email": "mapaosc@gmail.com"
        },
        "version": "1.0"
    },
    "paths": {
        "/api": {
            "get": {
                "summary": "Api do Mapa do Mapa v3",
                "operationId": "cd34c3b6e1cfbcfb266b06167c5f59b2",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/osc": {
            "get": {
                "tags": [
                    "osc"
                ],
                "operationId": "getAll",
                "responses": {
                    "200": {
                        "description": "Retorna todos as OSCs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/osc"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/osc/{osc_id}": {
            "get": {
                "tags": [
                    "osc"
                ],
                "operationId": "get",
                "parameters": [
                    {
                        "name": "osc_id",
                        "in": "path",
                        "description": "Número de identificação da OSC",
                        "required": true,
                        "schema": {
                            "type": "int"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna uma OSC de acordo com o ID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/osc"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/osc/projeto/{id}": {
            "get": {
                "tags": [
                    "projeto"
                ],
                "operationId": "get",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Número de identificação do projeto",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna dados do projeto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/projeto"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "osc": {
                "description": "Osc model",
                "properties": {
                    "id_osc": {
                        "description": "Número de identificação da Osc",
                        "type": "string",
                        "example": ""
                    }
                },
                "type": "object"
            },
            "projeto": {
                "description": "Projeto model",
                "properties": {
                    "id": {
                        "description": "Número de identificação do projeto",
                        "type": "string",
                        "example": ""
                    }
                },
                "type": "object"
            }
        }
    }
}